@model IEnumerable<ModuleServicePOS.Data.ModelClasses.OrderDetails>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}
@if (Model != null)
{
    <div class="row mt-2">
        <div class="col-lg-2">
            <label>Date range:</label>
        </div>
        <div class="col-lg-2">
            <input type="text" id="min" class="form-control" name="min">
        </div>
        <div class="col-lg-2">
            <input type="text" id="max" class="form-control" name="max">
        </div>
    </div>
    
    <table class="table table-hover table-fixed makeDatatable" id="Orderlist">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date Prepared</th>
                <th>Client Name</th>
                <th>Mobile Number</th>
                <th>Address</th>
                <th>Prepared By</th>
                <th>Model</th>
                <th>S/N</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsClosed == true? "bg-success text-white" : "")">
                    <th scope="row">@item.Id</th>
                    <td>@item.DatePrepared.Value.ToString("yyyy/MM/dd")</td>
                    <td>@item.ClientName</td>
                    <td>@item.MobileNo</td>
                    <td>@item.Address</td>
                    <td>@item.PreparedBy</td>
                    <td>@item.Model</td>
                    <td>@item.SerialNo</td>
                    <td><a class="btn btn-primary" href="/Admin/Repair/@item.Id"> EDIT</a></td>
                </tr>
            }
        </tbody>
    </table>
}