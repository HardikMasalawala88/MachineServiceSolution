@model ModuleServicePOS.Data.FormModel.SummaryOfReceivedMasterFormModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Summary Of Rececived";
}

<form method="post" asp-action="AddSummaryOfReceived" asp-controller="Admin">
    <div class="container">
        <div class="row">
            <div class="col-8">
                <h2>Add New Summary Of Received</h2>
            </div>
            
        </div>
        <div class="row mt-2">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="CreatedBy" value="@Model.CreatedBy" />
            <div class="col">
                <label asp-for="ItemName"></label>
                <input asp-for="ItemName" class="form-control" required />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col ml-3">
                <button type="submit" class="btn btn-primary float-right" id="btnSubmitData">Save</button>
                <a class="btn btn-info float-right mr-1" asp-controller="Admin" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</form>

