@model ModuleServicePOS.Data.UserDetails
@{
    ViewBag.Title = "User Login";
}

<br />
<h2> Welcome To Login</h2>
<br />

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h3 class="panel-title pull-left" style="margin-left:10px"><strong>Login</strong></h3>
        </div>
    </div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        if (TempData["errorMsg"] != null)
        {
            <span class="text-danger">@TempData["errorMsg"]</span>
        }
        <div class="panel-body">
            <table class="table table-striped table-responsive">
                <tbody>
                    <tr>
                        <th>@Html.LabelFor(m => m.UserName, new { @class = "control-label" })</th>
                        <th>@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = "required" })</th>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(m => m.Password, new { @class = "control-label" })</th>
                        <th>@Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required" })</th>
                    </tr>
                    <tr>
                        <th colspan="2">@Html.ActionLink("Forgot Password...???", "Forgetpwd")</th>
                    </tr>
                    <tr>
                        <th colspan="2">
                            <button class="btn btn-primary" type="submit">Login</button>
                        </th>
                    </tr>
                </tbody>
            </table>
        </div>
    }
    <h3>@ViewBag.Msg</h3>
</div>

